<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263238"
    tools:context=".MainScreen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/createCharacterTile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginHorizontal="15dp"
                android:onClick="onClick"
                android:src="@drawable/add_character_tile"
                android:alpha="0.75"/>

            <ImageView
                android:id="@+id/viewCharacterTile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginHorizontal="15dp"
                android:onClick="onClick"
                android:src="@drawable/view_character_tile"
                android:alpha="0.75"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/diceTile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginHorizontal="15dp"
                android:onClick="onClick"
                android:alpha="0.75"
                android:src="@drawable/dice_tile" />

            <ImageView
                android:id="@+id/spellTile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginHorizontal="15dp"
                android:onClick="onClick"
                android:src="@drawable/spell_tile"
                android:alpha="0.75"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/settingsTile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:alpha="0.75"
                android:onClick="onClick"
                android:src="@drawable/settings_tile" />
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>